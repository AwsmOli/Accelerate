<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
      android:layout_height="fill_parent" android:layout_width="fill_parent"
    tools:context=".ax.MainActivity">
    <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="1dp"
            android:layout_margin="5dp">

         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             >


             <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="80dp"
                 android:text="Xray T4&apos;15"
                 android:id="@+id/tfCarName"
                 android:textColor="@color/textColorPrimary"
                 android:textSize="24dp"
                 android:gravity="fill_horizontal|fill_vertical"
                 android:layout_alignParentTop="true"
                 android:layout_toRightOf="@+id/button_menu"
                 android:layout_above="@+id/linearLayout2"
                 android:background="@color/colorPrimary"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentEnd="true" />

             <ImageButton
                 android:layout_width="48dp"
                 android:layout_height="48dp"
                 android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                 android:background="@color/colorPrimary"
                 android:id="@+id/button_menu"
                 android:layout_alignParentTop="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" />

             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"


                 android:id="@+id/linearLayout2"
                 android:layout_below="@+id/button_menu"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentEnd="true"
                 android:gravity="center">

                 <LinearLayout
                     android:orientation="vertical"
                     android:layout_width="115dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:layout_alignTop="@+id/linearLayout2"
                     android:layout_centerHorizontal="true"
                     android:layout_alignBottom="@+id/ivCar"
                     android:id="@+id/linearLayout3">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAppearance="?android:attr/textAppearanceLarge"
                         android:text="100%"
                         android:id="@+id/tfConsistencyValue"
                         android:layout_above="@+id/textView6"
                         android:layout_toRightOf="@+id/ivCar"
                         android:textColor="@color/genre"
                         android:layout_alignRight="@+id/textView6"
                         android:layout_alignEnd="@+id/textView6"
                         android:textSize="31dp" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Consistency"
                         android:id="@+id/textView6"
                         android:textColor="@color/genre"
                         android:layout_alignBottom="@+id/ivCar"
                         android:layout_toRightOf="@+id/ivCar"
                         android:layout_toEndOf="@+id/ivCar" />
                 </LinearLayout>

                 <LinearLayout
                     android:orientation="vertical"
                     android:layout_width="110dp"
                     android:layout_height="fill_parent"
                     android:id="@+id/linearLayout"
                     android:padding="10dp"
                     android:gravity="center_vertical|center_horizontal"
                     android:layout_alignTop="@+id/ivCar"
                     android:layout_alignBottom="@+id/ivCar"
                     android:layout_alignParentRight="true"
                     android:layout_alignParentEnd="true"
                     >

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAppearance="?android:attr/textAppearanceSmall"
                         android:text="Avg;   15.54"
                         android:id="@+id/tfAvg"
                         android:textColor="@color/genre"
                         android:layout_alignBaseline="@+id/tfLaps"
                         android:layout_alignBottom="@+id/tfLaps"
                         android:layout_toRightOf="@+id/imageView4"
                         android:layout_toEndOf="@+id/imageView4"
                         android:padding="2dp" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAppearance="?android:attr/textAppearanceSmall"
                         android:text="Best:  15.54"
                         android:id="@+id/tfBest"
                         android:textColor="@color/genre"
                         android:layout_below="@+id/tfCarName"
                         android:layout_toRightOf="@+id/imageView5"
                         android:layout_toEndOf="@+id/imageView5"
                         android:padding="2dp" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAppearance="?android:attr/textAppearanceSmall"
                         android:text="Laps: 1552"
                         android:id="@+id/tfLaps"
                         android:textColor="@color/genre"
                         android:layout_alignTop="@+id/imageView6"
                         android:layout_toRightOf="@+id/imageView6"
                         android:layout_toEndOf="@+id/imageView6"
                         android:padding="2dp" />
                 </LinearLayout>
             </LinearLayout>

             <com.echo.holographlibrary.LineGraph
                 android:layout_width="fill_parent"
                 android:layout_height="150dp"
                 android:layout_below="@+id/linearLayout2"
                 android:id="@+id/linegraph"
                 android:layout_alignRight="@+id/linearLayout2"
                 android:layout_alignEnd="@+id/linearLayout2">

                 </com.echo.holographlibrary.LineGraph>

         </RelativeLayout>


        </android.support.v7.widget.CardView>
</LinearLayout>