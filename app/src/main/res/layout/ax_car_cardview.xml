<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
      android:layout_height="fill_parent" android:layout_width="fill_parent"
    tools:context=".ax.MainActivity">
    <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="1dp"
            android:layout_margin="5dp">

         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             >


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="31dp"
                 android:id="@+id/tfCarName"
                 android:textColor="@android:color/tertiary_text_light"
                 android:textSize="24dp"
                 android:gravity="fill_horizontal|fill_vertical"
                 android:layout_alignParentTop="true"
                 android:layout_alignParentLeft="true"
                 android:layout_marginLeft="15dp"
                 android:layout_alignParentStart="true"
                 android:layout_marginTop="10dp" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="17dp"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:text="Modified"
                 android:id="@+id/tfClass"
                 android:textColor="@android:color/tertiary_text_light"
                 android:gravity="bottom"
                 android:layout_alignParentTop="false"
                 android:layout_toEndOf="@+id/tfCarName"
                 android:layout_below="@+id/tfCarName"
                 android:layout_alignParentLeft="true"
                 android:layout_marginLeft="15dp" />

             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"


                 android:id="@+id/linearLayout2"
                 android:gravity="center"
                 android:layout_below="@+id/tfClass"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true">

                 <LinearLayout
                     android:orientation="vertical"
                     android:layout_width="95dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:layout_alignTop="@+id/linearLayout2"
                     android:layout_centerHorizontal="true"
                     android:layout_alignBottom="@+id/ivCar"
                     android:id="@+id/linearLayout4" >

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAppearance="?android:attr/textAppearanceLarge"
                         android:text="1"
                         android:id="@+id/tfRank"
                         android:layout_above="@+id/textView4"
                         android:layout_toRightOf="@+id/ivCar"
                         android:textColor="@color/colorPrimary"
                         android:layout_alignRight="@+id/textView4"
                         android:layout_alignEnd="@+id/textView4"
                         android:textSize="31dp" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Rank"
                         android:id="@+id/textView4"
                         android:textColor="@android:color/tertiary_text_light"
                         android:layout_alignBottom="@+id/ivCar"
                         android:layout_toRightOf="@+id/ivCar"
                         android:layout_toEndOf="@+id/ivCar" />
                 </LinearLayout>

                 <LinearLayout
                     android:orientation="vertical"
                     android:layout_width="95dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:layout_alignTop="@+id/linearLayout2"
                     android:layout_centerHorizontal="true"
                     android:layout_alignBottom="@+id/ivCar"
                     android:id="@+id/linearLayout3">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAppearance="?android:attr/textAppearanceLarge"
                         android:text="100%"
                         android:id="@+id/tfConsistencyValue"
                         android:layout_above="@+id/textView6"
                         android:layout_toRightOf="@+id/ivCar"
                         android:textColor="@color/colorPrimary"
                         android:layout_alignRight="@+id/textView6"
                         android:layout_alignEnd="@+id/textView6"
                         android:textSize="31dp" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Consistency"
                         android:id="@+id/textView6"
                         android:textColor="@android:color/tertiary_text_light"
                         android:layout_alignBottom="@+id/ivCar"
                         android:layout_toRightOf="@+id/ivCar"
                         android:layout_toEndOf="@+id/ivCar" />
                 </LinearLayout>

                 <LinearLayout
                     android:orientation="vertical"
                     android:layout_width="95dp"
                     android:layout_height="fill_parent"
                     android:id="@+id/linearLayout"
                     android:padding="10dp"
                     android:gravity="center_vertical|center_horizontal"
                     android:layout_alignTop="@+id/ivCar"
                     android:layout_alignBottom="@+id/ivCar"
                     android:layout_alignParentRight="true"
                     android:layout_alignParentEnd="true"
                     >

                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:textAppearance="?android:attr/textAppearanceSmall"
                             android:text="Avg:"

                             android:textColor="@android:color/tertiary_text_light"
                             android:layout_alignBaseline="@+id/tfLaps"
                             android:layout_alignBottom="@+id/tfLaps"
                             android:layout_toRightOf="@+id/ivCondition"
                             android:layout_toEndOf="@+id/ivCondition"
                             android:padding="2dp" />

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text="15.36"
                             android:id="@+id/tfAvg"
                             android:textColor="@color/colorPrimary"
                             android:gravity="right" />
                     </LinearLayout>

                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:textAppearance="?android:attr/textAppearanceSmall"
                             android:text="Best:"
                             android:textColor="@android:color/tertiary_text_light"
                             android:layout_below="@+id/tfCarName"
                             android:layout_toRightOf="@+id/imageView5"
                             android:layout_toEndOf="@+id/imageView5"
                             android:padding="2dp" />

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text="15.36"
                             android:id="@+id/tfBest"
                             android:textColor="@color/colorPrimary"
                             android:gravity="right" />
                     </LinearLayout>

                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:textAppearance="?android:attr/textAppearanceSmall"
                             android:text="Laps:"
                             android:textColor="@android:color/tertiary_text_light"
                             android:layout_alignTop="@+id/imageView6"
                             android:layout_toRightOf="@+id/imageView6"
                             android:layout_toEndOf="@+id/imageView6"
                             android:padding="2dp" />

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text="1254"
                             android:id="@+id/tfLaps"
                             android:textColor="@color/colorPrimary"
                             android:gravity="right" />
                     </LinearLayout>

                 </LinearLayout>

             </LinearLayout>

             <ImageButton
                 android:layout_width="48dp"
                 android:layout_height="48dp"
                 android:id="@+id/detailsButton"
                 android:src="@drawable/ic_menu_forward"
                 android:background="@android:color/transparent"
                 android:layout_alignTop="@+id/tfCarName"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentEnd="true"
                 android:tint="@color/colorPrimary"
                  />

             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_below="@+id/linearLayout2"
                 android:gravity="center_horizontal">

                 <ListView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:id="@+id/listView0"
                     android:layout_weight=".33"
                      />

                 <ListView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:id="@+id/listView1"
                     android:layout_weight=".33"
                      />
                 <ListView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:id="@+id/listView2"
                     android:layout_weight=".33"
                     />
             </LinearLayout>

         </RelativeLayout>


        </android.support.v7.widget.CardView>
</LinearLayout>