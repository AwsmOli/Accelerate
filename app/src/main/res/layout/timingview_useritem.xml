<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lap_list_row_selector"
        android:padding="8dp"
        android:clickable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"

            android:layout_alignTop="@+id/textView11"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"

            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_alignBottom="@+id/textView15"
            android:layout_toRightOf="@+id/textView11"
            android:layout_toEndOf="@+id/textView11" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"

            android:layout_alignBottom="@+id/textView16"
            android:layout_toLeftOf="@+id/textView16"
            android:layout_toStartOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            android:text="Atsushi Ohara"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView14"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="@dimen/rating"
            android:text="18.45"
            android:layout_gravity="center"
            android:typeface="normal"
            android:textColor="#ff565656"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="5dp"
            android:textColor="@color/genre"
            android:textSize="@dimen/genre"
            android:text="Hotbodies CXX"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/year"
            android:textSize="@dimen/year"
            android:text="Modified"
            android:singleLine="true"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="17"
            android:id="@+id/textView14"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_alignBottom="@+id/textView12"
            android:textSize="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="16.03"
            android:id="@+id/textView15"
            android:layout_below="@+id/textView10"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:typeface="normal"
            android:textSize="@dimen/rating" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="14754"
            android:id="@+id/textView16"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:typeface="normal"
            android:textSize="@dimen/rating" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="\@RCC GraphenwÃ¶rth"
            android:id="@+id/textView3"
            android:gravity="center"
            android:textSize="@dimen/year"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp" />

    </RelativeLayout>

